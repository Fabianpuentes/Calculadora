    <head>
        <meta charset="UTF-8">
        <title>INGRESE SU VALOR DE COMPRA</title>
    </head>
    <form action='index.php' method='post'>
        valor1:<input type='text' name='costo1'>
        valor1:<input type='text' name='costo2' value=''>
        <input values='Sumar valores' type='submit'>
    </form>
    
    <table style='width:100%'>
        <tr>
            <th>Ingrese el valor del producto 1: </th>
            <th>Ingrese el valor del producto 2: </th>
            <th>La suma de los productos es: </th>
            <th>El valor del IVA (19%) es: </th>
            <th>La suma de productos e IVA es: </th>
        </tr>
    
    <body>
        <?php
        try {
            $wsdl_url = 'http://localhost:8080/Calc/Log?WSDL';
            $client = new SOAPClient($wsdl_url);
            $costo1= filter_input(INPUT_POST, 'costo1');
            $costo2= filter_input(INPUT_POST, 'costo2');
            
            $sum=$costo1+$costo2;
            $params=array('q'=> "$sum",);
            $return = $client->Calcular($params);
            echo '<pre>';
            print_r($return);
            echo '<pre>';
        } catch (Exception $e) {
            echo "Exception occured: " . $e;
        }
        echo
        '<TR>' .
        '<TH>' .$costo1 . '</TH>'.        
        '<TH>' .$costo2 . '</TH>'.
        '<TH>' .$sum . '</TH>'                        
        ?>
        </table>
    </body>
