@Path("suma")
public class suma {
    @GET
    public String operar (@QueryParam("num1")int n1,@QueryParam("num2") int n2){
    int sum;// valor1, valor2;
    double iva;
    double tot;
    //System.out.println("Ingrese el valor 1");
    //valor1=n1;
    //System.out.println("Ingrese el valor 2");
    //valor2=n2;
        sum=n1+n2;
        iva=sum*0.19;
        tot=sum+iva;
        return String.valueOf("La suma de los valores ingresados es: " +sum+ 
                              ", El IVA (19%) de los valores es: " +iva+ 
                              ", Aplicando el IVA (19%), el total a pagar es: " +tot);
    }
}
